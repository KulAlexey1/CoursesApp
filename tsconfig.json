{
    "compileOnSave": true,
    "compilerOptions": {
        "baseUrl": "./src",
        "paths": {
            "@app": ["index.tsx"],
            "@app/*": ["./*"],
            "@components": ["components"],
            "@components/*": ["components/*"],
            "@redux": ["redux"],
            "@shared": ["shared"]
        },
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "esnext",
        "moduleResolution": "node", // Tell tsc to look in node_modules for modules
        "lib": ["es2015", "dom"],
        "types": ["node", "lodash", "mocha"],
        "typeRoots": ["./node_modules/@types"],
        "target": "es5",
        "jsx": "react",
        "strict": true, // Strict types, eg. prohibits `var x=0; x=null`
        "alwaysStrict": true, // Enable JavaScript's "use strict" mode
        "watch": true
    },
    "exclude": ["./node_modules", "/index.d.ts", "/resources/images"]
}
