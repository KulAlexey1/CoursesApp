{
    "compileOnSave": true,
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "esnext",
        "moduleResolution": "node", // Tell tsc to look in node_modules for modules
        "lib": ["es2015", "dom"],
        "target": "es5",
        "jsx": "react",
        "strict": true, // Strict types, eg. prohibits `var x=0; x=null`
        "alwaysStrict": true, // Enable JavaScript's "use strict" mode
        "watch": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
